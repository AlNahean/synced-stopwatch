generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Stopwatch {
  id          String        @id @default("singleton")
  isRunning   Boolean       @default(false)
  startTime   DateTime      @default(now())
  elapsedTime BigInt        @default(0) // Stored as milliseconds
  laps        Lap[]
  activities  ActivityLog[]
  updatedAt   DateTime      @updatedAt
}

model Lap {
  id          String    @id @default(cuid())
  stopwatchId String
  stopwatch   Stopwatch @relation(fields: [stopwatchId], references: [id])
  time        BigInt
  createdAt   DateTime  @default(now())
}

model ActivityLog {
  id          String    @id @default(cuid())
  stopwatchId String
  stopwatch   Stopwatch @relation(fields: [stopwatchId], references: [id])
  action      String // e.g., START, PAUSE, LAP, RESET
  details     String? // e.g., Lap time
  createdAt   DateTime  @default(now())
}
